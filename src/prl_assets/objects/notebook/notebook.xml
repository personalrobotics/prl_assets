<mujoco model="notebook">
  <compiler angle="radian"/>

  <asset>
    <texture name="notebook_tex" type="2d" file="notebook_texture.png"/>
    <material name="notebook_mat" texture="notebook_tex" specular="0.5" shininess="0.5"/>
    <mesh name="notebook_visual" file="notebook_visual.obj"/>
  </asset>

  <worldbody>
    <body name="notebook" pos="0 0 0.008">
      <freejoint name="notebook_joint"/>

      <!-- Collision geometry - flat rectangular book -->
      <geom name="notebook_collision"
            type="box"
            size="0.064 0.106 0.008"
            mass="0.3"
            friction="0.7 0.005 0.0001"
            contype="1"
            conaffinity="1"
            rgba="0 0 0 0"/>

      <!-- Visual mesh -->
      <geom name="notebook_visual"
            type="mesh"
            mesh="notebook_visual"
            material="notebook_mat"
            contype="0"
            conaffinity="0"/>
    </body>
  </worldbody>
</mujoco>
